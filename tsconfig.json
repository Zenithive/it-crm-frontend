{
  "compilerOptions": {
    "target": "ES2017",
    // "module": "ESNext",

  
    
    // "target": "ESNext",
   
    
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "typeRoots": ["./node_modules/@types", "./types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.ts",
 "tests/OverallLeadsContact/ContactKanbanView.test.js",
    "tests/**/*" ,
 "tests/login.test.js", "tests/OverallLeadsContact/ContactKanbanView.js", "tests/OverallLeadsContact/ContactListView.test.js", "tests/dashboard.test.js"  ],
  "exclude": ["node_modules"]
}
